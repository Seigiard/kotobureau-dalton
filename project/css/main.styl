html, body
  margin 0
  padding 0

html
  background: #fff url(../img/bg-main.png) 3px 0% no-repeat

body
  font-family: "Lato"
  font-size: 20px
  padding: 20px 20px 0
  color: #000
  margin: 0 auto
  max-width: 960px

h1, h2
  font-size: 90px
  font-family: Oswald
  font-weight: 500
  line-height: 1.1em
  padding: 20px 0
  color: #000
  .accent
    color: #E10606

h1
  margin 0
  padding 0

h3
  font-weight: 400;
  font-size: 30px;
  letter-spacing: 0.22px;
  margin: 181px 0 0;
  padding: 0;

h4
  font-weight: 800
  font-size: 20px
  margin: 49px 0 2px 0
  padding: 0
  letter-spacing: 0.3px
  &.half-margin-top
    margin-top: 28px;


p
  padding: 0 0 1em 0;
  margin: 0;
  line-height: 1.3;


p + h4
  padding-top: 30px


blockquote
  display block
  text-align center
  margin: 115px auto 270px
  max-width: 780px
  padding 0
  p
    line-height: 1.6
    padding 0 0 1.6em 0
    font-weight bold
    font-size: 24px
    font-style italic
  cite
    font-size: 20px
    font-style: normal

img
  max-width: 100%

figure
  margin 0
  padding 5px 0
  figcaption
    font-size: 16px
    font-weight: 400
    color #999

/*  GROUPING  */
.group
	clear: both
	padding: 0px
	margin: 0px
.group:before, .group:after
  content: ""
  display: table
.group:after
  clear: both

/*  COLUMN SETUP  */
.col
  display: block
  float: left
  margin: 0 0 0 1.6%
  box-sizing: border-box;
  &.col-4
    width: 100%
  &.col-3
    width: 74.6%
  &.col-2
    width: 49.2%
  &.col-1
    width: 23.8%
  &:first-child
    margin-left: 0

@media only screen and (max-width: 480px)
	.col
    margin: 1% 0 1% 0%
	.col-1, .col-2, .col-3, .col-4
    width: 100%

header.topheader
  position: relative
  nav
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    justify-content: flex-end
    align-content: stretch
    align-items: center
    li
      list-style: none
      margin: 0
      padding: 0
      order: 0
      flex: 0 1 25%
      align-self: auto
      & > a
        padding: 12px
        font-size 18px
    h1
      margin: 7px 0 0 -172px
      padding: 0
      font-size: 41px
      line-height: 1

header.topheader + article {
  margin-top 126px
}

article + article {
  margin-top 240px
}

.article-header {
  margin-bottom 213px
  img {
    margin-top 65px
  }
}

.map-solution {
  margin-top 58px
  .col.col-3 {
    padding: 209px 30px 0;
  }
}